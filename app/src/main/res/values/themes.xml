<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.Ovulio" parent="android:Theme.Material.Light.NoActionBar">
        <item name="android:fontFamily">@font/nunito_sans</item>
    </style>

    <style name="OnboardTheme" >
        <item name="android:fontFamily">@font/nunito_sans</item>
        <item name="android:textAlignment">center</item>
        <item name="android:background">@color/WhiteBG</item>
        <item name="android:textColor">@color/BodyText</item>
        <item name="android:textSize">@dimen/H1</item>
    </style>

    <style name="nextButtonTheme" parent="Widget.AppCompat.Button.Borderless" >
        <item name="android:fontFamily">@font/nunito_sans</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/BodyText</item>
        <item name="android:textSize">@dimen/H2</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="SplashScreenTheme" parent="android:Theme.Material.Light.NoActionBar">
        <item name="android:windowBackground">@color/SplashBG</item>



    </style>

    <style name="SignInTheme" >
        <item name="android:fontFamily">@font/nunito_sans</item>
        <item name="android:textAlignment">textStart</item>
        <item name="android:background">@color/WhiteBG</item>
        <item name="android:textColor">@color/PrimaryDark</item>
        <item name="android:textSize">@dimen/Body</item>
    </style>

    <style name="SignUpTheme" >
        <item name="android:fontFamily">@font/nunito_sans</item>
        <item name="android:textAlignment">center</item>
        <item name="android:background">@color/PrimaryLight</item>
        <item name="android:textColor">@color/BodyText</item>
        <item name="android:textSize">@dimen/Body</item>
    </style>

    <style name="CustomCheckbox" parent="@style/Widget.AppCompat.CompoundButton.CheckBox">
        <item name="android:colorControlNormal">#7a7a7a</item>
        <item name="android:colorControlActivated">#3db5ea</item>
        <item name="android:colorControlHighlight">#3db5ea</item>
    </style>

</resources>