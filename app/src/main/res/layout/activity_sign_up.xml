<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".login.SignUp"
    android:theme="@style/SignUpTheme">

    <ImageView
        android:id="@+id/SignUpImage"
        android:layout_width="303dp"
        android:layout_height="194dp"
        android:layout_marginTop="@dimen/marginTop"
        android:src="@drawable/mainlogo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:fontFamily="@font/libre_baskerville"
        android:text="Hi There"
        android:textColor="@color/HeadText"
        android:textSize="@dimen/H1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/SignUpImage" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Boost your wellness with Ovulio"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <Button
        android:id="@+id/SignInPageSignInButton"
        android:layout_width="164dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:layout_marginBottom="172dp"
        android:background="@drawable/border_radius"
        android:stateListAnimator="@null"
        android:text="Sign In"
        android:theme="@style/nextButtonTheme"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">
    </Button>

    <Button
        android:id="@+id/SignUpButton"
        android:layout_width="164dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:layout_marginBottom="126dp"
        android:background="@drawable/border_button"
        android:stateListAnimator="@null"
        android:text="Sign Up"
        android:textAllCaps="false"
        android:theme="@style/nextButtonTheme"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        >

    </Button>




</androidx.constraintlayout.widget.ConstraintLayout>